<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox fx:id="programContent">
        <Label fx:id="variantLabel" visible="false" text="Вариант 5"/>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER">
                <Label fx:id="header"/>
                <VBox spacing="50">
                    <padding>
                        <Insets topRightBottomLeft="50"/>
                    </padding>
                    <VBox>
                        <HBox spacing="50" alignment="CENTER">
                            <HBox spacing="5">
                                <TextField fx:id="digit1" prefWidth="30"/>
                                <TextField fx:id="digit2" prefWidth="30"/>
                                <TextField fx:id="digit3" prefWidth="30"/>
                                <TextField fx:id="digit4" prefWidth="30"/>
                                <TextField fx:id="digit5" prefWidth="30"/>
                                <TextField fx:id="digit6" prefWidth="30"/>
                            </HBox>
                            <Button fx:id="searchProgram5">
                                <graphic>
                                    <ImageView fx:id="tickets"
                                               fitWidth="30"
                                               fitHeight="30"
                                               preserveRatio="true"/>
                                </graphic>
                            </Button>
                        </HBox>
                        <Label fx:id="errorInputProgram5" style="-fx-text-fill: #d35244;"/>
                    </VBox>
                    <VBox>
                        <Label fx:id="resultLabelProgram5" text="Вот, что получилось :)"/>
                        <HBox spacing="10">
                            <ComboBox fx:id="resultProgram5_0" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_1" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_2" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_3" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_4" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_5" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_6" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_7" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_8" maxHeight="50"/>
                            <ComboBox fx:id="resultProgram5_9" maxHeight="50"/>
                        </HBox>
                    </VBox>
                    <Button fx:id="cancelProgram5" visible="false"
                            text="Отменить" prefWidth="100"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
