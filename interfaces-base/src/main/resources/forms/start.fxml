<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml">
    <HBox AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <ImageView fx:id="startImageView"
                   fitHeight="520"
                   fitWidth="300"
                   preserveRatio="true"/>
        <VBox fx:id="rootVBox" prefWidth="460">
            <HBox alignment="CENTER" style="-fx-padding: 80 0 0 0;">
                <Label fx:id="header" text="Добро пожаловать!"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 40 0 0 40;">
                <Label fx:id="message" text="Введите код для начала анализа программы"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20 0 0 40;">
                <VBox>
                    <TextField fx:id="code" promptText="Код" prefWidth="380"/>
                    <Label fx:id="error" style="-fx-text-fill: #d35244;"/>
                    <Label fx:id="tip" text="Укажите числовой код и нажмите &lt;Enter&gt;"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 140 40 0 0;">
                <ImageView fx:id="universityImageView"
                           fitHeight="70"
                           fitWidth="70"
                           preserveRatio="true"
                           opacity="0.5"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
